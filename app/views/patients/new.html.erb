<div class="center hero-unit">
  <h1>Dental Now</h1>

  <h2>
  Skip the dental waiting line!
  </h2>
	<%= form_for @patients do |f| %>
		<p>
			<%= f.label :name, "Your Name" %>
			<%= f.text_field :name %>
		</p>
		<p>
			<%= f.label :number, "Phone Number" %>
			<%= f.text_field :number %>
		</p>
		<p>
			<%= f.label :email, "Email" %>
			<%= f.text_field :email %>
		</p>
		<p>
			<%=f.label :appointment, "Date of Appointment" %>
			<%=f.date_field :appointment %>
		</p>
		<p>
			<%=f.label :avatar, "Dental Images" %>
			<%=f.file_field :avatar %>
		</p>
		<p>
			<%= f.label :description, "Please Describe your Symptoms" %>
			<%= f.text_area :description, size: "50x6" %>
		</p>
		<p>
			<%= f.submit %>
		</p>
	<% end %>
</div>
